@using System.Threading.Tasks
@using AdminNetBaires.Entities
@using AdminNetBaires.ViewModels
@model MembersIndexViewModel
@{
    ViewBag.Title = "Lista de Members";
}


<table>
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            External ID
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    @foreach (Member item in Model.Members)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.ExternaId</td>
            <td>
                <a asp-controller="Members" asp-action="Edit" asp-route-id="@item.Id">Edit</a>-
                @Html.ActionLink("Detail", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>

